{
  "env": {
      "browser": true
  },
  "globals": {
      "require": true,
      "module": true
  },
  "extends": "eslint:recommended",
  "rules": {
      "block-scoped-var": 2,
      "camelcase": 2,
      "comma-spacing": 2,
      "eol-last": 2,
      "eqeqeq": [2, "smart"],
      "keyword-spacing": [2, { "before": true, "after": true }],
      "no-multiple-empty-lines": [2, { "max": 1, "maxEOF": 1, "maxBOF": 0 }],
      "radix": 2,
      "semi": 2,
      "semi-spacing": 2,
      "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  }
}
